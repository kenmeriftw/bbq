<div class="text-center">
  <h1><%= @user.name %></h1>

  <%= image_tag user_avatar(@user) %>

  <% if @user == current_user %>
    <p class="buffer-top">
    <%= link_to t('views.users.show.header'), edit_user_path(@user),
      class: 'btn btn-outline-success' %>
    </p>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3><%= t('views.users.show.subheader') %></h3>
        <div class="row">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
        <% else %>
          <p class="buffer-top">User is shy and organized null events yet</p>
        <% end %>
    </div>
  </div>
</div>
