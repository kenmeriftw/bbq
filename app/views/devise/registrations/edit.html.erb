<h1><%= t('.header') %></h1>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="col-md-6 buffer-top">
      <div class="form-group">
        <%= f.label :password %> <i>(<%= t('.leave_blank') %>)</i><br/>
        <%= f.password_field :password, class: 'form-control' %>

      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> <%= t('.characters_minimum') %>)</em>
        <% end %><br/>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :current_password %> <i>(<%= t('.current_password') %>)</i><br/>
        <%= f.password_field :current_password, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit t('.save'), class: 'btn btn-outline-primary' %>
        <%= t('.or') %> <%= link_to t('.go_back'), :back %>
      </div>
    </div>
  </div>
<% end %>

<p><%= t('.unhappy') %> <%= button_to I18n.t('.cancel_account'), registration_path(resource_name), data: { confirm: I18n.t('.sure') }, method: :delete %></p>
