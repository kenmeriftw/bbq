<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages" , resource: resource %>
<main class="form-signin text-center">
  <form>
    <img class="mb-4" src="https://www.eventer.cc/wp-content/uploads/2019/01/logo-carre%CC%81-1-1.png" alt="Eventer" width="72" height="57">
    <h1 class="h3 mb-3 fw-normal"><%= t('views.registrations.header') %></h1>
    <div class="form-floating">
      <%= f.text_field :email, autofocus: true, type: "email", class: "form-control" ,
            id: "floatingInput" %>
      <label for="floatingInput"><%= t('activerecord.attributes.user.email')%></label>
    </div>
    <div class="form-floating">
      <% if @minimum_password_length %>
      <%= f.text_field :password,  type: "password" , class: "form-control" ,
              id: "floatingPassword" %>
      <label for="floatingPassword"><%= t('activerecord.attributes.user.password') %> (<%= @minimum_password_length %>
        <%= t('views.registrations.charmin') %>)</label>
      <% end %>
    </div>
    <div class="form-floating">
      <%= f.text_field :password_confirmation, type: "password", 
            class: "form-control" , id: "floatingPasswordConfirmation" %>
      <label for="floatingPasswordConfirmation"><%= t('activerecord.attributes.user.password_confirmation') %></label>
    </div>
    <button class="w-100 btn btn-lg btn-primary" type="submit"><%= t('views.registrations.sign_up') %></button>
  </form>
  <%= render "devise/shared/links" %>
</main>
<% end %>
