<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>
<main class="form-signin text-center">
  <form>
    <img class="mb-4" src="https://www.eventer.cc/wp-content/uploads/2019/01/logo-carre%CC%81-1-1.png" alt="Eventer" width="72" height="57">
    <h1 class="h3 mb-3 fw-normal"><%= t('views.signingin.header') %></h1>

    <div class="form-floating">
      <%= f.text_field :email, autofocus: true, placeholder: "Email address", type: "email", class: "form-control", id: "floatingInput" %>
      <label for="floatingInput"><%= t('activerecord.attributes.user.email')%></label>
    </div>
    <div class="form-floating">
      <%= f.text_field :password, placeholder: "Password", type: "password", class: "form-control", id: "floatingPassword" %>
      <label for="floatingPassword"><%= t('activerecord.attributes.user.password') %></label>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class="checkbox mb-3">
      <label><%= f.check_box :remember_me %> <%= t('views.signingin.remme') %></label>
    </div>
    <% end %>
    <button class="w-100 btn btn-lg btn-primary" type="submit"><%= t('views.signingin.sign_in') %></button>
  </form>
  <%= render "devise/shared/links" %>
</main>
<% end %>
