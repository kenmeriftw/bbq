<% errors = model.errors %>

<% if errors.any? %>
  <div class="alert alert-danger">
    <div class="lead buffer-bottom">
      В вашей форме <%= t :mistake, count: errors.count %>
    </div>
    <ul>
      <% model.errors.each do |error| %>
        <li><%= error.attribute %> <%= error.message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
